@page
@model Backoffice.Pages.Auth.LoginModel
@{
}

<div class="login-container">
    <div class="login-box">
        <div class="row g-0">
            <!-- Colonne de gauche avec fond bleu -->
            <div class="col-md-5 brand-section">
                <div class="brand-content">
                    <h1>Project Manager</h1>
                    <p>Manage your projects efficiently</p>
                </div>
            </div>

            <!-- Colonne de droite avec le formulaire -->
            <div class="col-md-7 form-section">
                <div class="form-content">
                    <h2>Welcome Back</h2>
                    <p class="subtitle">Sign in to continue to your account.</p>
                    
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="name@example.com" required>
                            <label for="email">Email Address</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="error-message">
                                @Model.ErrorMessage
                            </div>
                        }

                        <button type="submit" class="btn btn-primary w-100">Sign In</button>

                        <div class="register-link">
                            <p>Don't have an account? <a href="/Auth/Register">Create one</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
